{
  "manifest_version": 3,
  "name": "ProvvCalc (Zurich Sfera Bridge)",
  "version": "1.1.0",
  "description": "Calcolatrice provvigioni con lettura automatica del Premio imponibile da sfera.zurich.it",
  "permissions": ["sidePanel", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://*.zurich.it/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*.zurich.it/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "side_panel": { "default_path": "panel.html" },
  "action": { "default_title": "Apri ProvvCalc" },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
