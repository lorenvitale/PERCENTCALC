{
  "manifest_version": 3,
  "name": "ProvvCalc (Zurich Sfera Bridge)",
  "version": "1.0.0",
  "description": "Calcolatrice provvigioni con lettura automatica del Premio imponibile da sfera.zurich.it",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel", "activeTab", "scripting"],
  "host_permissions": ["https://sfera.zurich.it/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://sfera.zurich.it/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Apri ProvvCalc"
  }
}
